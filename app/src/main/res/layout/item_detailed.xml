<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/preview_detailed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/filename_detailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/preview_detailed"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        tools:text="TEST_FILENAME" />

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/modified"
        android:layout_toEndOf="@+id/preview_detailed"
        tools:text="created" />

    <TextView
        android:id="@+id/modified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/size"
        android:layout_toEndOf="@+id/preview_detailed"
        android:textSize="20sp"
        tools:text="modified" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filename_detailed"
        android:layout_toEndOf="@+id/preview_detailed"
        android:textSize="20sp"
        tools:text="size" />

    <Button
        android:id="@+id/download"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/ic_file_download_black_24dp"
        android:layout_margin="35dp"
        android:layout_below="@+id/created"
        />

    <Button
        android:id="@+id/delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/download"
        android:layout_below="@+id/created"
        android:layout_margin="35dp"
        android:background="@mipmap/ic_delete_black_24dp"
        />

    <Button
        android:id="@+id/copy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/ic_insert_drive_file_black_24dp"
        android:layout_toEndOf="@+id/delete"
        android:layout_below="@+id/created"
        android:layout_margin="35dp"
        />

</RelativeLayout>